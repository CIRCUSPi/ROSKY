<?xml version="1.0"?>
<launch>

    <arg name="veh" default="$(env VEHICLE_NAME)"/>
    <arg name="node_name" default="save_image"/>
    <arg name="pkg_name" default="object"/>
    <arg name="raw" default="true"/>

    <!-- jetson_camera -->
    <include file="$(find jetson_camera)/launch/jetson_camera.launch">
        <arg name="raw" value="$(arg raw)"/>
    </include>

    <!-- save_image -->
    <remap from="/$(arg veh)/save_image/image/raw" to="/$(arg veh)/jetson_camera/image/raw"/>
    <node ns="$(arg veh)" pkg="$(arg pkg_name)" type="$(arg node_name).py" name="$(arg node_name)" clear_params="true" output="screen">
    </node>

 
</launch>



    
 
