<launch>
        <arg name="pkg_name" default="mapper"/>
	<arg name="node_name" default="keyboard_mapper_node"/>	
	<arg name="veh" default="$(env VEHICLE_NAME)" doc="Name of vehicle. ex: megaman"/>
	<arg name="config" default="baseline" doc="Specify a config."/>
	<arg name="param_file_name" default="default" doc="Specify a param file. ex:megaman"/>
        <arg name="output" default="screen"/>
        <param name="$(arg veh)/$(arg node_name)/veh" type="str" value="$(arg veh)" />

	<!-- Run on vehicle -->
	<node ns="$(arg veh)" pkg="$(arg pkg_name)" type="$(arg node_name).py" name="$(arg node_name)" output="$(arg output)" clear_params="true" required="true">

       
	</node>	

	<!-- Subscribe Topics -->
	<!-- "teleop_twist_keyboard": geometry_msgs/Twist. The command read from keyboard -->
	<!-- Publish Topics -->
	<!-- "~wheels_cmd": duckietown_msgs/WheelsCmd. Wheels command for duckiebot -->

</launch>
